<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.faviotorres.acopiomx">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_label"
        tools:replace="addroid:label"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.ActivityHome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.ActivityLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".register.ActivityRegister"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.ActivitySplash"
            android:label="@string/app_label"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acopio.ActivityAcopio"
            android:screenOrientation="portrait"/>
        <activity android:name=".acopio.agregar.ActivityAgregar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>